#!/bin/sh

# READY

. /usr/local/bin/loadmyvars.sh

if [ "x" = "x$PERSONALMNT" ]; then
    PERSONALMNT=/vault/data
fi

MP3PATH=${PERSONALMNT}/beet/mp3/
MUSICPATH=${PERSONALMNT}/music/

## can't link if on separate zfs dataset
# rsync -virtP --link-dest=${MP3PATH}  ${MP3PATH}  ${MUSICPATH}
rsync -virtP  ${MP3PATH}  ${MUSICPATH}
