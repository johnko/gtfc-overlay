#!/bin/sh

BLACKLIST=$( pf-table show black | tr '\n' '|' | tr -d ' ' )
if [ "x${BLACKLIST}" = "x" ]; then
	BLACKLIST="randomstringofdatahere"
fi

if ls /usr/jails/gitlab/var/log/auth.log*bz2 >/dev/null 2>&1 ; then
  bunzip2 /usr/jails/gitlab/var/log/auth.log*bz2
fi

MYNIC=`net-nic`

cat /usr/jails/gitlab/var/log/auth.log* \
| sed "s/ `net-ip $MYNIC` / /g" \
| sed "s/ ${REMOTEHOST} / /g" \
| fold -w 150 \
| egrep "(Bad protocol version identification|Did not receive identification string)" \
| egrep -v "(${BLACKLIST%|})"
